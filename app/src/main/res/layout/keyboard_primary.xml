    <!--shift zxcvbnm delete-->
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--shift-->
        <com.example.lgh.simpleinputmethod.custom.Keybutton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/icons"
            android:text="@string/ic_shift"
            app:keyType="shift"
            android:textSize="@dimen/shift_text_size"
            android:layout_weight="1"/>
        <android.support.v4.widget.Space
            android:layout_width="@dimen/space_width"
            android:layout_height="0dp" />
        <!--z-->
        <com.example.lgh.simpleinputmethod.custom.Keybutton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="z"/>
        <android.support.v4.widget.Space
            android:layout_width="@dimen/space_width"
            android:layout_height="0dp" />
