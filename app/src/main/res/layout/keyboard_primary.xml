            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/icons"
            android:text="@string/ic_clear"
            app:keyType="delete"
            android:textSize="@dimen/delete_text_size"
            android:background="@drawable/keybutton_background_pressed"
            android:textColor="@color/white"
            android:layout_weight="1"/>
    </LinearLayout>

    <!--bottom-->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--跳转到数字键盘-->
        <com.example.lgh.simpleinputmethod.custom.Keybutton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/icons"
            android:text="@string/ic_number"
            android:textSize="@dimen/to_number_text_size"
            app:keyType="to_number"
            android:background="@drawable/keybutton_background_pressed"
            android:textColor="@color/white"
            android:layout_weight="2"/>
        <android.support.v4.widget.Space
            android:layout_width="@dimen/space_width"
            android:layout_height="0dp" />
        <!--跳转到符号键盘-->
        <com.example.lgh.simpleinputmethod.custom.Keybutton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/icons"
            android:text="@string/ic_symbol"
            android:textSize="@dimen/to_symbol_text_size"
            app:keyType="to_symbol"
            android:background="@drawable/keybutton_background_pressed"
            android:textColor="@color/white"
            android:layout_weight="2"/>
        <android.support.v4.widget.Space
            android:layout_width="@dimen/space_width"
            android:layout_height="0dp" />
        <com.example.lgh.simpleinputmethod.custom.Keybutton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="," />
        <android.support.v4.widget.Space
            android:layout_width="@dimen/space_width"
            android:layout_height="0dp" />
        <!--空格-->
        <com.example.lgh.simpleinputmethod.custom.Keybutton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/icons"
            android:text="@string/ic_space"
            android:layout_weight="6"
            app:keyType="space"/>
        <android.support.v4.widget.Space
            android:layout_width="@dimen/space_width"
            android:layout_height="0dp" />
        <com.example.lgh.simpleinputmethod.custom.Keybutton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="." />
        <android.support.v4.widget.Space
            android:layout_width="@dimen/space_width"
            android:layout_height="0dp" />
        <!--中英文转换键-->
        <com.example.lgh.simpleinputmethod.custom.Keybutton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/icons"
            android:text="@string/ic_chinese"
            app:keyType="toggle_ec"
            android:background="@drawable/keybutton_background_pressed"
            android:textColor="@color/white"
            android:textSize="@dimen/ce_text_size"
            android:layout_weight="2"/>
        <android.support.v4.widget.Space
            android:layout_width="@dimen/space_width"
            android:layout_height="0dp" />
        <!--回车键-->
        <com.example.lgh.simpleinputmethod.custom.Keybutton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ic_return"
            app:keyType="newline"
            android:textSize="@dimen/ret_text_size"
            android:layout_weight="2"
            android:background="@drawable/keybutton_background_pressed"
            android:textColor="@color/white"
            android:fontFamily="@font/icons"/>
    </LinearLayout>
</LinearLayout>